{
  "preset": "ts-jest",
  "rootDir": "src",
  "collectCoverage": true,
  "testRegex": "e2e-testing/.*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/services/*.ts", "**/*.resolver.ts"],
  "coveragePathIgnorePatterns": ["src/prisma", "src/shared"],
  "coverageDirectory": "../coverage-e2e",
  "testEnvironment": "node"
}
